<div class="container p-10 ">
  <h1 class="text-4xl font-bold" > <%= t('account.sign_up') %> </h1>

  <%= form_with model: @user,class:"pt-6", url: sign_up_path do |form| %>
    <% if form.object.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
        <% form.object.errors.full_messages.each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
    <% end %>


    <div class="mb-3 mt-3 flex flex-col">
      <%= form.label :email, t('form_labels.email') %>
      <%= form.text_field :email, class: "form-control mt-2 rounded", placeholder: t('form_labels.email_placeholder') %>
    </div>
    <div class="mb-3 flex flex-col">
      <%= form.label :password, t('form_labels.password') %>
      <%= form.password_field :password, class: "form-control mt-2 rounded", placeholder: t('form_labels.password') %>
    </div>
    <div class="mb-3 flex flex-col">
      <%= form.label :password_confirmation, t('form_labels.password_confirmation') %>
      <%= form.password_field :password_confirmation, class: "form-control mt-2 rounded", placeholder: t('form_labels.password') %>
    </div>
    <div class="mb-3 flex flex-col">
      <%= form.label :admin %>
      <%= form.check_box :admin, class: "form-control mt-2 rounded"%>
    </div>
    <div class="mb-3 flex flex-col">
      <%= form.label :shop %>
      <%= form.check_box :shop, class: "form-control mt-2 rounded"%>
    </div>
    <div class="mb-3">
      <%= form.submit t('account.create'), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"%>
    </div>
  <% end %>
</div>