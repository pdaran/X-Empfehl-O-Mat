<html lang="de">
<div>
  <main>
    <h1 class="text-center mb-10"><%= t('categories') %></h1>
    <div class="flex flex-wrap min-h-screen justify-center items-center gap-4">
      <% @categories.each_slice(3) do |category_row| %>
        <div class="flex flex-col w-54 h-54 md:flex-row justify-center md:h-full md:w-full">
          <% category_row.each do |category| %>
            <div class="rounded-md items-center p-2 w-md md:w-1/3 text-center m-4 flex flex-col justify-center transition-transform duration-300 ease-in-out hover:scale-105">
              <a href="<%= category_path(category) %>" class="text-gray-800 hover:underline">
                <%= category.title %>
                <% if category.status == 'active' %>
                  <span class="blinking active"></span>
                <% elsif category.status == 'deactivated' %>
                  <span class="blinking deactivated"></span>
                <% end %>
              </a>
              <div class="w-full flex justify-center">
                <% if category.image.attached? && category.status == 'active'%>
                  <a href="<%= category_path(category) %>" class="w-full h-auto">
                    <%= image_tag category.image.variant(:large), class: "mx-auto my-auto rounded-md" %>
                  </a>
                <% elsif category.status == 'deactivated'%>
                  <a href="<%= category_path(category) %>" class="w-full h-auto">
                    <%= image_tag category.image.variant(:large), class: "mx-auto my-auto rounded-md deactivated-image" %>
                  </a>
                <% else %>
                  <%= image_tag 'placeholder.jpeg', class: "object-cover mx-auto my-auto rounded-md w-56 h-56 md:w-56 md:h-56" %>
                <% end %>
              </div>
              <!-- Additional product details -->
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="bg-gray-300 order-4 rounded-md text-center text-3xl p-4 mb-4 transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 duration-300 hover:opacity-80 flex justify-center items-center w-1/3 h-auto mx-auto">
      <%= link_to new_category_path do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
  </main>
</div>
</html>
