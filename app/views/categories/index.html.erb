<!DOCTYPE html>
<html lang="de">

<div>

<%= render "nav" %>


<div class="flex min-h-screen mt-10 ml-2 justify-center align-middle items-center">
  <div class="flex flex-wrap gap-2">
    <% @categories.each_slice(3) do |category_row| %>
      <div class="flex w-full">
        <% category_row.each do |category| %>
          <div class="bg-gray-200 order-4 rounded-md p-4 w-1/3 text-center m-5">
            <a href="<%= category_path(category) %>">
              <%= category.title %>
            </a>
          </div>
        <% end %>
      </div>
    <% end %>
    <!-- "Kategorie" box -->
    <div class="bg-gray-300 order-4 rounded-md text-center block text-3xl p-4 transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 duration-300 hover:opacity-80 w-1/3">
      <%= link_to new_category_path do %>
        <i class="fas fa-plus"></i>
        <span class="ml-2">Kategorie</span>
      <% end %>
    </div>
  </div>
</div>



<%= render "footer" %>

</div>
</html>
