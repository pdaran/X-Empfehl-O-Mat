<head class="flex h-auto z-1 max-w-max w-full">
    <title>Spill the Tee - Kategorien</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="style.css">
    <script src="https://kit.fontawesome.com/e464ad1dd2.js" crossorigin="anonymous"></script>
</head>
<body>
  <div class="w-full relative">
    <nav class="flex bg-gray-200 justify-between p-5 flex-wrap">
      <div>
        <a href="<%= root_path %>">Spill the Tea</a>
      </div>
      <div class="profile flex gap-5 flex-row">
        <%= button_to "", sign_up_path, method: :get, class: "fa-regular fa-user py-3 flex z-1 max-w-max" %>
        <% if Current.user %>
          <%= link_to Current.user.email, edit_password_path, class: "underline visited:text-purple-600 text-blue-600 hover:text-blue-800 py-2 px-4" %>
          <%= button_to "Logout", logout_path, method: :delete, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        <% else %>
          <%= button_to "Sign up", sign_up_path, method: :get, class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
          <%= button_to "Login", sign_in_path, method: :get, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
        <% end %>
      </div>
    <div class=" flex flex-wrap">
      <div class="flex flex-row gap-2 mr-5">
      <% I18n.available_locales.each do |l| %>
         <a class="flex flex-row" href="<%= url_for(locale: l) %>">
          <% if l == :en %>
           <%= image_tag("united-kingdom.png", width: '40px')%>
          <% elsif l == :de %>
         <%= image_tag("germany.png", width: '40px')%>
        <% end %>  
        </a>
      <% end %>
    </div>  
    <% if Current.user %>
        <div class="dashboard">
          <%= link_to "Dashboard", controller: 'dashboards', action: 'index' %>
        </div>
      <% end %>
    </nav>
  </div>
</body>

