<div class="field ml-auto pb-4">
  <%= text_field_tag :attr, attr.name, disabled: true %>
  <% if attr.numeric? %>
    <%= attr.unit %>
  <% end %>

  <% if controller.controller_name == "categories" && controller.action_name == "edit" %>
    <div>
      <button class="text-red-500 hover:text-red-700 max-w-1/2">
        <%= link_to t('delete'), [attr.category, attr], data: {
          turbo_method: :delete,
          turbo_confirm: t('attr.delete_confirm')
        } %>
      </button>
      <button class="text-blue-600 hover:text-blue-700 max-w-1/2">
        <%= link_to t('edit'), edit_category_attr_path(attr.category, attr) %>
      </button>
    </div>
  <% end %>

</div>