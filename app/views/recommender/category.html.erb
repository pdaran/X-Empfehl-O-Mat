<div class="flex items-center justify-center flex-col min-h-screen">
  <%= render "recommender/title", subtitle: t('choose_a_category') %>

  <div class="flex flex-wrap min-h-screen justify-center items-center gap-4">
    <% @categories.each_slice(3) do |category_row| %>
      <div class="flex justify-center h-full w-full">
        <% category_row.each do |category| %>
        <% next if category.deactivated? %>
          <div class="rounded-md items-center p-2 w-1/3 text-center m-4 flex flex-col justify-center transition-transform duration-300 ease-in-out hover:scale-110">
            <a href="./recommender/ <%= category.id %>" class="text-gray-800 hover:underline  ">
              <%= category.title %>
            </a>
            <div class="w-full flex justify-center">
              <% if category.image.attached? %>
                <a href="./recommender/ <%= category.id %>">
                  <%= image_tag category.image, class: "object-cover mx-auto my-auto rounded-md w-1/2"%>
                </a>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
