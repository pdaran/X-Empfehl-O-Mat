<div class="flex items-center justify-center flex-col min-h-screen">
  <%= render "recommender/title", subtitle: t('choose_a_category') %>

  <div class="flex flex-wrap min-h-screen justify-center items-center gap-6 mt-6">
    <% @categories.each_slice(3) do |category_row| %>
      <div class="flex flex-col w-54 h-54 md:flex-row gap-6 justify-center md:h-full md:w-full">
        <% category_row.each do |category| %>
          <% next if category.deactivated? %>
          <div class="rounded-md items-center p-2 w-md md:w-1/3 text-center m-4 flex flex-col justify-center transition-transform duration-300 ease-in-out hover:scale-105">
            <% if category.image.attached? %>
              <a href="./recommender/<%= category.id %>" class="text-gray-800 hover:underline">       
               <%= category.title %>
              </a>
            <% else %>
              <a href="./recommender/<%= category.id %>" class="text-gray-800 hover:underline mx-auto my-auto rounded-md w-20 h-20 sm:w-14 sm:h-14">
                <%= category.title %>
              </a>
            <% end %>
            <% if category.image.attached? %>
              <div class="w-full md:w-56 md:h-56 h-auto">
                <a href="./recommender/<%= category.id %>">
                  <%= image_tag category.image, class: "object-cover mx-auto my-auto gap-6 rounded-md w-56 h-56" %>
                </a>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
