<div>
  <h1 class="font-bold text-4xl"><%= t('shops') %></h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
  <% @shops.each do |shop| %>
    <div class="bg-white rounded-lg shadow-lg">
      <div class="p-4">
        <h2 class="font-bold text-2xl mb-2"><%= link_to shop.name, shop_categories_path(shop), class: "text-blue-600 hover:text-blue-700" %></h2>
        <p class="mb-2"><%= shop.address %></p>
        <p class="mb-2"><%= shop.phone_no %></p>
        <p class="mb-2"><%= shop.email %></p>
        <p class="mb-2"><%= shop.status %></p>
        <div class="flex justify-end">
          <button class="text-red-500 hover:text-red-700 mr-2">
            <%= link_to t('shop.delete'), shop_path(shop), data: {
                        turbo_method: :delete,
                        turbo_confirm: t('product.delete_confirm')
                      } , class: "text-red-500 hover:text-red-700 max-w-1/2"%>
          </button>
          <button class="text-blue-600 hover:text-blue-700">
            <%= link_to "Edit", edit_shop_path(shop), class: "text-blue-600 hover:text-blue-700" %>
          </button>
        </div>
      </div>
    </div>
  <% end %>
</div>
      <div class="">
        <%= link_to new_shop_path do %>
          <i class="fas fa-plus"></i>
        <% end %>
      </div>
</div>
