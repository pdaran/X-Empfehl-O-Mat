<div>
  <h1 class="font-bold text-4xl pt-5 pl-5">
    <%= t('shops') %>
    <%= link_to new_shop_path do %>
      <i class="fas fa-plus"></i>
    <% end %>
  </h1>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
    <% @shops.each do |shop| %>
      <div class="border border-black rounded-lg shadow-lg">
        <div class="p-4">
          <h2 class="font-bold text-2xl mb-2">
            <%= link_to shop.name, shop_categories_path(shop), class: "text-black hover:text-blue-700" %>
          </h2>
          <p class="mb-2"><%= shop.address %></p>
          <p class="mb-2"><%= shop.phone_no %></p>
          <p class="mb-2"><%= shop.email %></p>
          <p class="mb-2"><%= shop.status %></p>
          <div class="flex justify-end">
            <div class="flex items-center mr-2">
              <%= link_to edit_shop_path(shop), class: "text-black hover:text-black-200" do %>
                <i class="fas fa-pencil-alt"></i>
                <span class="ml-1"><%= t('shop.edit') %></span>
              <% end %>
            </div>
            <div class="flex items-center">
              <%= link_to shop_path(shop), data: { turbo_method: :delete, turbo_confirm: t('product.delete_confirm') }, class: "text-red-500 hover:text-red-700" do %>
                <i class="fas fa-trash-alt"></i>
                <span class="ml-1"><%= t('shop.delete') %></span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
