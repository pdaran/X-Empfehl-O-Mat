<% unless product.archived? %>
<div class="category">
 <p>
    <strong>Product:</strong>
    <%= product.product %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.desc %>
  </p>
   <p>
    <%= link_to "(-)", [product.category, product], data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                } %>
  </p>
</div>
<% end %>