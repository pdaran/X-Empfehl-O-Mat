<% unless product.archived? %>
<div class="bg-gray-200 flex flex-col rounded-md p-4 m-5 justify-center items-center" >
 <p class="text-center">
    <strong>Product:</strong>
    <%= product.product %>
  </p>

  <p class="text-center">
    <strong>Description:</strong>
    <%= product.desc %>
  </p>
   <p class="text-center">
    <%= link_to "(-)", [product.category, product], data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                } %>
  </p>
</div>
<% end %>